<Gerenciador>:
    Menu:
        name: 'menu'
    addAMB:
        name: 'addAMB'

<Menu>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Adicionar Ambiente'
            on_release: app.root.current = 'addAMB'
        Button:
            text: 'Ver ambientes'
        Button:
            text: 'Selecionar ambiente atual'

<addAMB>:
    Label:
        text: 'Adicionar Ambiente NOVO'
    Label:
        text: 'Nome do ambiente'
    TextInput:
        multiline = False
        size_hint_y: None
        heigh: 100
        size_hint_x:
        width: 100
        id: texto
